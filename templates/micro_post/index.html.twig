{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <small class="d-block text-right mt-3">
        <a href="{{ path('micro_post_add') }}">Add Post</a>
    </small>
    <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>

    {% for post in posts %}
        <a href="{{ path('micro_post_view', {'id': post.id}) }}">
            {% include 'micro_post/raw-post.html.twig' with {'post': post} %}
        </a>
    {% endfor %}
    <small class="d-block text-right mt-3">
        <a href="#">All updates</a>
    </small>
{% endblock %}
